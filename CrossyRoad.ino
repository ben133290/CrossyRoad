void updateLEDS() {
  unsigned char x, y;
  for(y=0; y<matrix.height(); y++) {
    for(x=0; x<matrix.width(); x++) {
      int value = game.getValueAtPos(x, y);
      if (value == 0) {
        matrix.drawPixel(x, y, matrix.Color333(0, 0, 0));
      }
      if (value == 1) {
        matrix.drawPixel(x, y, matrix.Color333(15, 15, 15));
      }
    }
  }
}

